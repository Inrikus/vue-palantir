+<script setup>
+import BannerPanel from '@/components/collections/Banner/BannerPanel.vue'
+import { computed, ref } from 'vue'
+import { fetchBanners } from '@/utils/api'
+
+const stats = ref({ listed: 0 })
+
+const loadStats = async () => {
+  try {
+    const { data } = await fetchBanners()
+    const total = Object.values(data.collections || {}).reduce((sum, item) => sum + (item.count_on_sale || 0), 0)
+    stats.value.listed = total
+  } catch (e) {
+    stats.value.listed = 0
+  }
+}
+
+loadStats()
+
+const tiles = computed(() => [
+  {
+    title: 'Wiki',
+    description: 'Cores, Weapons и будущие Buffs в едином хабе.',
+    action: 'Open wiki',
+    to: '/wiki',
+    label: 'Data hub'
+  },
+  {
+    title: 'Collections',
+    description: 'Живые floor цены, фильтры и аналитика по шестёрке коллекций.',
+    action: `${stats.value.listed} items listed`,
+    to: '/collections',
+    label: 'Marketplace'
+  }
+])
+</script>
+
+<template>
+  <section class="home">
+    <div class="promo-grid">
+      <router-link v-for="tile in tiles" :key="tile.to" :to="tile.to" class="promo-card">
+        <p class="eyebrow">{{ tile.label }}</p>
+        <h2>{{ tile.title }}</h2>
+        <p class="description">{{ tile.description }}</p>
+        <span class="action">{{ tile.action }} →</span>
+      </router-link>
+    </div>
+
+    <BannerPanel />
+  </section>
+</template>
+
+<style scoped>
+.home {
