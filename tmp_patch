+  background: rgba(5,6,12,.8);
+  transition: border-color .2s ease, transform .2s ease;
+}
+.promo-card:hover { border-color: rgba(99,180,200,.6); transform: translateY(-4px); }
+.eyebrow { font-size: 0.7rem; letter-spacing: 0.4em; text-transform: uppercase; color: rgba(255,255,255,.55); }
